Algoritmo convertir_dolares
	//Hacer un algoritmo que permita convertir dolares ingresados a pesos colombianos. La TRM sera de 3394.8
	
	Definir dolares como numerico; definir col como numerico;
	
	Escribir "ingrese el valor en dolares que desea convertir a pesos colombianos";
	Leer dolares;
	
	col = dolares * 3394.8;
	
	Escribir "Los dolares ingresados en pesos colombianos es: ", col;
		
